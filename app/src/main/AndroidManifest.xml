<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ✅ AGREGAR ESTOS PERMISOS PARA BIOMETRÍA -->
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/inventorywidget"
        android:label="Inventory Widget"
        android:roundIcon="@mipmap/inventorywidget_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">

        <!-- Actividad principal de login -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

<!--        <activity-->
<!--            android:name=".AgregarProductoActivity"-->
<!--            android:exported="false" />-->

        <!-- Pantalla principal (Home) -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <receiver
            android:name=".widget.InventoryAppWidget"
            android:exported="true"
            android:label="Inventory Widget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_inventory_info" />
        </receiver>

    </application>

</manifest>