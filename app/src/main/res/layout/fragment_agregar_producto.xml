<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000"
    tools:context=".ui.agregarproducto.AgregarProductoFragment">

    <!-- Toolbar (Cumple Criterio 1) -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarAgregarProducto"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#424242"
        android:title="Agregar producto"
        android:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Contenedor scrollable para campos de formulario -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarAgregarProducto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Código producto  -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilCodigoProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Código producto"
                app:hintTextColor="#FFFFFF"
                app:boxStrokeColor="#FFFFFF"
                app:boxStrokeWidthFocused="2dp"
                android:textColorHint="@color/white">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCodigoProducto"
                    android:inputType="number"
                    android:maxLength="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Nombre artículo -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilNombreProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Nombre artículo"
                app:hintTextColor="#FFFFFF"
                app:boxStrokeColor="#FFFFFF"
                app:boxStrokeWidthFocused="2dp"
                android:textColorHint="@color/white">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNombreProducto"
                    android:inputType="textCapSentences"
                    android:maxLength="40"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Precio -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilPrecioProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Precio"
                app:hintTextColor="#FFFFFF"
                app:boxStrokeColor="#FFFFFF"
                app:boxStrokeWidthFocused="2dp"
                android:textColorHint="@color/white">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPrecioProducto"
                    android:inputType="numberDecimal"
                    android:maxLength="20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Cantidad -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilCantidadProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:hint="Cantidad"
                app:hintTextColor="#FFFFFF"
                app:boxStrokeColor="#FFFFFF"
                app:boxStrokeWidthFocused="2dp"
                android:textColorHint="@color/white">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCantidadProducto"
                    android:inputType="number"
                    android:maxLength="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"/>

            </com.google.android.material.textfield.TextInputLayout>


            <!-- Botón para guardar -->
            <Button
                android:id="@+id/btnGuardarProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="16dp"
                android:enabled="false"
                app:backgroundTint="#e7522e"
                android:textColor="@color/white"
                app:cornerRadius="8dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
